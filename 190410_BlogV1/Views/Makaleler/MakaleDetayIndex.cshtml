@model _190410_BlogV1.Models.Makaleler
@{
    ViewBag.Title = "MakaleDetayIndex";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<div class="details">
    <div class="container">
        <div class="det_pic">
            <img src="~/Template/images/img18.jpg" class="img-responsive" alt="">
        </div>
        <div class="det_text">
            <h2>@Model.Baslik </h2>
            <p>@Model.icerik</p>
        </div>
        <ul class="links">
            <li><i class="date"> </i><span class="icon_text">@Model.EklenmeTarihi</span></li>
            <li><a href="#"><i class="admin"> </i><span class="icon_text"> @ViewBag.Yazar </span></a></li>
            <li class="last"><a href="#"><i class="permalink"> </i><span class="icon_text">Permalink</span></a></li>
        </ul>
        <ul class="links_middle">
            <li><i class="date"> </i><span class="icon_text">@Model.GuncellenmeTarihi</span></li>
            <li><i class="tags"> </i><span class="icon_text">Etiketler</span></li>
        </ul>
        <ul class="links_bottom">
            <li><a href="#"><i class="comments"> </i><span class="icon_text">5 Comments</span></a></li>
            <li><i class="views"> </i><span class="icon_text">@Model.GoruntulenmeSayisi</span></li>
            <li><i class="likes"> </i><span class="icon_text">@Model.BegenmeSayisi</span></li>
        </ul>

        <!----------------------------------yorum listesi-------------------------------------------->
        <div class="comments1">
            <h4>YORUMLAR</h4>

            @Html.Action("YorumListesi", "Makaleler")

        </div>
        <!----------------------------------yorum listesi-------------------------------------------->
        <div class="lev">
            <div class="leave">
                <h4>Yorum Yapın</h4>
            </div>
            <form id="commentform">
                <label for="author">İsim</label>
                <input id="author" name="author" type="text" value="" size="30" aria-required="true">
                <label for="email">Email</label>
                <input id="email" name="email" type="text" value="" size="30" aria-required="true">
                <label for="url">Yorum Başlık</label>
                <input id="url" name="url" type="text" value="" size="30">
                <label for="comment">Yorum</label>
                <textarea></textarea>
                <div class="clearfix"></div>
                <input name="submit" type="submit" id="submit" value="Paylaş">
                <div class="clearfix"></div>
            </form>
        </div>

    </div>
</div>

